@model CalebBookstore.Models.BookStore

<form asp-action="Create" asp-area="Books" method="post">
<div class="row">	
<div class="col-lg-12">
		<div class="form-group">
	 <label>Book Title</label>
	 <input asp-for="Title" type="text" class="form-control required" placeholder="Enter book title" tabindex="1"/>
	 </div>
	 <div class="form-group">
	 <label>Authour:</label>
	 <input asp-for="Authour" type="text" class="form-control required" placeholder="Enter Authour name" tabindex="2"/>
	 </div>
	 <div class="form-group">
	 <label>Price</label>
	 <input asp-for="Price" type="text" class="form-control required" placeholder="Enter price" tabindex="3"/>
	 </div>
	 <div class="form-group">
	  <div asp-validation-summary="All" class="text-danger"></div>
  </div>
  <div class="card-footer">
	  <center>
	   <button type="submit" class="btn-primary">Create Book</button>
	   <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
   </center>
  </div>
 </div>
 </div>
</form>